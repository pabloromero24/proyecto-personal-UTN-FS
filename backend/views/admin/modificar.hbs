<div class="formulario">
    <h2 class="mb-5 titulo-agregar">Modificar un producto</h2>
    <form action="/admin/novedades/modificar" method="post">
    <input type="hidden" value="{{novedad.id}}" name="id">
      <div class="mb-3">
        <label for="nombre">Nombre del Producto</label>
        <input type="text" value="{{novedad.nombre}}" class="form-control" name="nombre">
      </div>
      <div class="mb-3">
        <label for="descripcion">Descripci√≥n</label>
        <textarea name="descripcion" class="form-control" rows="4" cols="50">{{novedad.descripcion}}</textarea>
      </div>
      <label for="precio">Precio</label>
        <input class="form-control" type="text" name="precio" value="{{novedad.precio}}">
      <button type="submit" class="btn btn-primary">Guardar</button>
      <button type="button" class="btn btn-primary" onclick="cancelar()">Cancelar</button>
    </form>  
    {{#if error}} 
        <p class="p-error">{{message}}</p>
    {{/if}}  

    <script>
      function cancelar(){
        window.location.href="/admin/novedades";}
    </script>  

</div>

